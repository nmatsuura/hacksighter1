<!DOCTYPE html>
<html>
<head>
  <title>Hacksighter1</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.1/css/bootstrap-combined.min.css" rel="stylesheet">
  <script src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.1/js/bootstrap.min.js"></script>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="assets/css/bootstrap-responsive.css" rel="stylesheet">
</head>
<!-- <body 
	style = "background: #CFB899"> -->
<body>

<div class="navbar">
  <div class="navbar-inner">
    <a class="brand" href="#">HackSIGHTER</a>
    <% if user_signed_in? %>

    	<ul class="nav">
	      <li class="active">
	      	<%= link_to "Report a sighting", new_sighting_path %></li>
			
			<li class="active">
	      	<%= link_to "Add a new topic", new_topic_path %></li>

	      <li class="active">
	      	<%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
	    </ul>

	<% else %>
		<ul class="nav">
		<li class="active">
		<%= link_to "Sign In", new_user_session_path %></li>
		</ul>
	
	<% end %>

	
		<div class='pull-right'>
			<p class='navbar-text'>
		<% if user_signed_in? %>
			<%= current_user.email %>
		<% else %>
			Not signed in
		<% end %>
			</p>
		</div>
	

  </div>
</div>

<div class='container'>



<%= yield %>

<%= yield :scripts %>

</body>
</html>
